[Logging]
default = FILE:/var/log/krb5libs.log
kdc = FILE:/var/log/krb5kdc.log
admin_server = FILE:/var/log/kadmind.log

[libdefaults]
default_realm = <%= @realm.upcase %>
dns_lookup_realm = false
dns_lookup_kdc = false
ticket_lifetime = 24h
forwardable = yes
default_keytab_name = FILE:/etc/krb5.keytab

[realms]
INTRANET.EPFL.CH = {
kdc = intranet.epfl.ch:88
admin_server = intranet.epfl.ch:749
default_domain = intranet.epfl.ch
}

<%- if @use_test_ad -%>
IDEVINGTLADF2.LOC = {
kdc = idevingtladdc2.idevingtladf2.loc:88
default_domain = idevingtladf2.loc
}
<%- end -%>

[domain_realm]
.intranet.epfl.ch = INTRANET.EPFL.CH
intranet.epfl.ch = INTRANET.EPFL.CH

.epfl.ch = INTRANET.EPFL.CH
epfl.ch = INTRANET.EPFL.CH

<%- if @use_test_ad -%>
.idevingtladf2.loc = IDEVINGTLADF2.LOC
idevingtladf2.loc = IDEVINGTLADF2.LOC
<%- end -%>

[appdefaults]
pam = {
debug = true
ticket_lifetime = 36000
renew_lifetime = 36000
forwardable = true
krb4_convert = false
}
